<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_task_row"
    android:layout_marginTop="5dp"
    android:padding="5dp">
    <TextView
        android:id="@+id/row_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignStart="@+id/row_is_complete_check_box"
        android:layout_marginEnd="4dp"
        />
    <CheckBox
        android:id="@+id/row_is_complete_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:buttonTint="@color/checkbox_checked_bg_color"
        android:background="@android:color/transparent" />


</RelativeLayout>